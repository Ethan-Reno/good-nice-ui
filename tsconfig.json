{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES6",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "react",
  },
  "include": [
    "./src/index.ts",
  ],
}
