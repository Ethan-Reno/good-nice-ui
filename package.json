    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "tslib": "^2.6.2",
    "tslint-config-prettier": "^1.18.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vite-tsconfig-paths": "^4.3.2",
    "zod": "^3.22.4"
