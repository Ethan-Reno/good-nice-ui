{
  "name": "good-nice-ui",
  "version": "0.6.1",
  "description": "A Tree-shakeable React UI component library built with Radix and Tailwind",
  "author": "Ethan Reno",
  "license": "MIT",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist/**"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Ethan-Reno/good-nice-ui"
  },
  "scripts": {
    "build:styles": "postcss ./src/tailwind.css -o dist/index.css",
    "build:bundle": "tsup",
    "build": "npm-run-all -l -p build:bundle build:styles",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "serve-storybook": "serve storybook-static",
    "lint": "npx eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
