    "@storybook/addon-storysource": "^8.0.6",
    "@storybook/addon-themes": "^8.0.6",
    "@storybook/blocks": "^8.0.6",
    "@storybook/manager-api": "^8.0.6",
    "@storybook/react": "^8.0.6",
    "@storybook/react-vite": "^8.0.6",
    "@storybook/theming": "^8.0.6",
    "@types/react": "^18.2.74",
